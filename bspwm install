git clone https://github.com/baskerville/bspwm
git clone https://github.com/baskerville/sxhkd.git
make & sudo make install

git clone https://gitlab.com/protesilaos/lemonbar-xft.git
make & sudo make install

echo 'x11-wm/bspwm examples' >> /etc/portage/package.use/bspwm
emerge --ask x11-wm/bspwm x11-misc/sxhkd
mkdir -vp ~/.config/bspwm ~/.config/sxhkd
cp -v /usr/share/doc/bspwm-0.9.10/examples/bspwmrc.* ~/.config/bspwm/
cp -v /usr/share/doc/bspwm-0.9.10/examples/sxhkdrc.* ~/.config/sxhkd/
https://github.com/baskerville/bspwm/tree/master/examples
